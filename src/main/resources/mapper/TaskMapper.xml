<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xing.shiro_jwt.dao.TaskMapper">


    <resultMap type="com.xing.shiro_jwt.vo.Task" id="TaskMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="count" column="count" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" >
        insert into tasks(name)
        values (#{name})
    </insert>


    <select id="checkExist" resultType="java.lang.Integer">
        select count(id) from tasks
        where name = #{name}
    </select>

    <select id="getAllTasks" resultMap="TaskMap">
        SELECT t.id,t.name,COUNT(s.task_id) count FROM tasks t
        JOIN submissions  s ON t.id = s.task_id
        GROUP BY t.id
    </select>

    <delete id="delete">
        delete from tasks
        where id = #{id}
    </delete>
</mapper>